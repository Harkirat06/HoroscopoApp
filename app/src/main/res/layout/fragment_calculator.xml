<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zodiac_connection"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"/>

    <!-- Imagen de la primera persona -->
    <ImageView
        android:id="@+id/imageview_person1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/capricorn"
        android:scaleType="centerCrop"
        android:layout_below="@id/textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- Selector de signo zodiacal para la primera persona -->
    <Spinner
        android:id="@+id/spinner_person1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_person1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Imagen de la segunda persona -->
    <ImageView
        android:id="@+id/imageview_person2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/leo"
        android:scaleType="centerCrop"
        android:layout_below="@id/spinner_person1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- Selector de signo zodiacal para la segunda persona -->
    <Spinner
        android:id="@+id/spinner_person2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_person2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Botón para calcular la compatibilidad -->
    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:textColor="@android:color/white"
        android:layout_below="@id/spinner_person2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <!-- Resultado de la compatibilidad -->
    <TextView
        android:id="@+id/textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/button_calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>
</RelativeLayout>
